<!DOCTYPE html>
<html lang="en">
  <head>
    {{>header}}
    <title>All Matches</title>
  </head>
  <body>
    {{>navbar}}
    <div class="wrapper">
      <div class="container">
        <div class="row g-1 allProducts">
          {{#each matches as |match|}}
          <div class="col-md-3">
              <div class="card p-3">
                <div class="product-details">
                  <span class="font-weight-bold d-block">Teams: {{match.team1}} VS {{match.team2}}</span>
                  <span class="font-weight-bold d-block">City: {{match.city}}</span>
                  <span class="font-weight-bold d-block">Date: {{match.date}}</span>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
      </div>
    </div>
    
  </body>
</html>

